{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8083
    },
    "ui": {
      "enabled": true
    },
    "storage": {
      "port": 9199
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
